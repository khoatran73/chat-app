<%- include('layouts/header.ejs'); -%>
<script src="./js/register.js"></script>
    <div class="wrapper">
        <section class="form login">
            <header>Chat App</header>
            <form action="/register" method="POST" enctype="multipart/form-data" autocomplete="off">
                <div class="error-text"></div>
                <div class="field input">
                    <label>Họ tên</label>
                    <input type="text" name="name" placeholder="Nhập họ tên" required>
                </div>
                <div class="field input">
                    <label>Email</label>
                    <input type="text" name="email" placeholder="Nhập email" required>
                </div>
                <div class="field input">
                    <label>Mật khẩu</label>
                    <input type="password" name="password" placeholder="Nhập mật khẩu" required>
                    <i class="fas fa-eye" id="eye"></i>
                </div>
                <div class="field input">
                    <label>Xác nhận mật khẩu</label>
                    <input type="password" name="password2" placeholder="Nhập lại mật khẩu" required>
                    <i class="fas fa-eye" id="eye-2"></i>
                </div>
                <div class="custom-file">
                    <input type="file" name="image" class="custom-file-input" id="image" required>
                    <label class="custom-file-label" for="image">Chọn ảnh đại diện ...</label>
                </div>
                <div class="field button">
                    <input type="submit" name="submit" value="Đăng kí">
                </div>
            </form>
            <div class="link">Bạn đã có tài khoản ? <a href="./login">Đăng nhập</a></div>
        </section>
    </div>
<%- include("./layouts/footer.ejs") -%>